<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f| %>
  <%= devise_error_messages! %>
  <%= f.hidden_field :reset_password_token %>
  <fieldset>
    <legend><%= t('app.title.change_password') %></legend>
	<div class="field">
	  <%= f.label :password, t('app.label.new_password') %>
	  <%= f.password_field :password, :autocomplete => 'off', :autofocus => true %>
	</div>
	<div class="field">
	  <%= f.label :password_confirmation, t('app.label.confirm_new_password') %>
	  <%= f.password_field :password_confirmation %>
	</div>
    <div class="button">
	  <%= f.submit t('app.action.change') %>
	</div>
  </fieldset>
<% end %>

<%= render "devise/shared/links" %>