<%= render 'shared/view_title_link_new', :model => Message %>
<%= grid(@messages_grid, show_filters: :when_filtered, allow_showing_all_records: false) do |g|

  g.column :name => Message.human_attribute_name('title'), :attribute => 'title' do |message|
    link_to(message.title, message_path(message))
  end

  render 'shared/grid_columns_timestamps', :row => g, :model => Message
  render 'shared/grid_column_action_links', :row => g
  render 'shared/grid_row_no_records', :grid => @messages_grid, :row => g, :model => Message

end %>
