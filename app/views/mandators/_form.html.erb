<%
  model_name = Mandator.model_name.human

  action = @mandator.id.nil? ? 'new' : 'edit'
  legend = t("app.title.#{action}_instance", :instance => model_name)

%>
<%= form_for(@mandator) do |f| %>
  <%= render 'shared/form_errors', :instance => @mandator %>
  <%= field_set_tag legend do %>
    <div class="field">
      <%= f.label :name %>
      <%= f.text_field :name, :autofocus => true %>
    </div>
    <div class="button">
      <%= f.submit t(@mandator.id.nil? ? 'app.action.create' : 'app.action.update') %>
    </div>
  <% end %>
<% end %>
