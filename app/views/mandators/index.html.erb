<%= render 'shared/title_link_new', :model => Mandator %>
<%= grid(@mandators_grid) do |g|

  g.column :name => Mandator.human_attribute_name('name'),
    :attribute => 'name' do |mandator|
      link_to(mandator.name, mandator_path(mandator))
  end

  g.column :html => {class: 'numeric'}, :name => Mandator.human_attribute_name('user_count'),
    :attribute => 'id', :model => User, :filter => false do |mandator|
      mandator.users.count
  end

  render 'shared/grid_columns_timestamps', :row => g, :model => Mandator
  render 'shared/grid_column_action_links', :row => g
  render 'shared/grid_row_no_instances', :grid => @mandators_grid, :row => g, :model => Mandator

end %>
<%= render 'shared/links_instance_export', :instance => Mandator %>
