<!DOCTYPE html>
<html>
<head>
  <title>OInfo</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div id="page">
	<header>
	  <h1>Online Information</h1>
	  <% if user_signed_in? %>
	  <div id="account_box">
		<%= link_to 'Your Account', edit_account_path %> |
		<%= link_to 'Logout', destroy_user_session_path, :method => :delete %>
	  </div>
	  <div id="navigation"><%= render_navigation %></div>
	  <% end %>
	</header>
	<div id="content">
	  <% flash.each do |name, msg| %>
	  <%= content_tag :div, msg, :class => "flash #{name}" if msg.is_a?(String) %>
	  <% end %>
	  <%= yield %>
	</div>
	<footer>
	  <span class="right">
		<%= sprintf('%.3f', (Time.now.usec - @start_time).abs / 1000000.0) %> seconds
	  </span>
	</footer>
  </div>
</body>
</html>
