<h2><%= t('paper_trail_manager.change', :count => 2) %></h2>
<div class="sub_navigation"><%= render_navigation :level => 2 %></div>
<%= grid(@versions_grid, show_filters: false, allow_showing_all_records: false) do |g|

  g.column :name => t('paper_trail_manager.time') do |version|
    [link_to("##{version.id}", change_path(version))+' '+l(version.created_at, format: :fdatetime), :class => 'change_time']
  end

  g.column :name => t('paper_trail_manager.attribute_diff') do |version|
    [render('grid_version_detail_cell', :version => version), :class => 'change_details']
  end

  if @versions_grid.count == 0
    g.last_row do |number_of_columns|
      content_tag(:tr, content_tag(:td,
        t('app.messages.no_records_for_model', :model => t('paper_trail_manager.change', :count => 2)),
        :colspan => number_of_columns), :class => 'no_records')
    end
  end

end %>
